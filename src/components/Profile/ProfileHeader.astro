---
// components/Profile/ProfileHeader.astro

interface Props {
  userData:         Record<string, any>;
  userInfo:         Record<string, any>;
  userStats:        Record<string, any> | null;
  displayAvatarUrl: string | null;
  initials:         string;
  memberSince:      string;
  ringColor:        string;
  circumference:    number;
  dashOffset:       number;
  bucketCount:      number;
}

const {
  userData, userInfo, userStats,
  displayAvatarUrl, initials, memberSince,
  ringColor, circumference, dashOffset, bucketCount,
} = Astro.props;

const RADIUS = 52;
const locationStr = [userInfo.location_city, userInfo.location_country].filter(Boolean).join(', ');
---

<div class="bg-white rounded-2xl border border-gray-100 shadow-md p-5 sm:p-6 profile-header-card">

  <!-- Top row: avatar + action buttons -->
  <div class="flex items-start justify-between gap-4 mb-5">

    <!-- Avatar + SVG completion ring -->
    <div class="relative shrink-0">
      <svg aria-hidden="true" viewBox="0 0 120 120"
           class="absolute pointer-events-none"
           style={`top:-6px;left:-6px;width:calc(100% + 12px);height:calc(100% + 12px);transform:rotate(-90deg)`}>
        <circle cx="60" cy="60" r={RADIUS} fill="none" stroke="#E5E7EB" stroke-width="4"/>
        <circle cx="60" cy="60" r={RADIUS}
          fill="none" stroke={ringColor} stroke-width="4" stroke-linecap="round"
          stroke-dasharray={circumference} stroke-dashoffset={dashOffset}
          class="ring-progress"/>
      </svg>
      <button type="button"
        onclick="document.getElementById('avatar-editor-modal').showModal()"
        aria-label="Change profile photo"
        class="relative w-24 h-24 sm:w-28 sm:h-28 rounded-full border-4 border-white
               bg-gray-100 overflow-hidden shadow-md cursor-pointer block
               focus:outline-none focus:ring-2 focus:ring-blue-500 group/av">
        {displayAvatarUrl
          ? <img src={displayAvatarUrl} alt={userData.full_name || userData.username} class="w-full h-full object-cover"/>
          : <div class="w-full h-full brand-gradient flex items-center justify-center text-white font-bold text-3xl">{initials}</div>
        }
        <div aria-hidden="true" class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center opacity-0 group-hover/av:opacity-100 transition-opacity duration-200">
          <svg class="w-5 h-5 text-white mb-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span class="text-white text-xs font-medium">Edit</span>
        </div>
      </button>

      {userData.is_verified && (
        <div class="absolute -bottom-0.5 -right-0.5 bg-blue-500 text-white p-1 rounded-full border-2 border-white shadow-sm" title="Verified Traveler">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
        </div>
      )}
    </div>

    <!-- Action buttons -->
    <div class="flex items-center gap-2 pt-1">
      <button onclick="document.getElementById('edit-profile-modal').showModal()"
        class="inline-flex items-center gap-1.5 text-sm font-semibold text-gray-700
               border border-gray-200 hover:border-gray-300 hover:bg-gray-50
               rounded-xl px-4 py-2 transition-all duration-150">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
        </svg>
        <span class="hidden sm:inline">Edit Profile</span>
        <span class="sm:hidden">Edit</span>
      </button>
      <button id="shareProfileBtn" aria-label="Share profile"
        class="w-9 h-9 flex items-center justify-center text-gray-500
               border border-gray-200 hover:border-gray-300 hover:bg-gray-50
               rounded-xl transition-all duration-150">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Identity -->
  <div class="mb-5">
    <div class="flex items-center gap-2 flex-wrap mb-0.5">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900 tracking-tight">
        {userData.full_name || 'Set up your profile'}
      </h1>
      {userData.is_verified && (
        <span class="inline-flex items-center gap-1 text-xs font-semibold text-blue-700 bg-blue-50 border border-blue-200 px-2 py-0.5 rounded-full">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Verified
        </span>
      )}
    </div>
    <p class="text-sm text-gray-400 mb-2">@{userData.username || 'username'}</p>
    <div class="flex flex-wrap items-center gap-x-4 gap-y-1">
      {locationStr && (
        <span class="flex items-center gap-1 text-xs text-gray-500">
          <svg class="w-3.5 h-3.5 text-gray-400 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {locationStr}
        </span>
      )}
      <span class="flex items-center gap-1 text-xs text-gray-400">
        <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Joined {memberSince}
      </span>
    </div>
  </div>

  <!-- Stat strip -->
  <dl class="flex items-stretch divide-x divide-gray-100 border-t border-gray-100 pt-5">
    {[
      { label: 'Created', value: userStats?.trips_owned ?? 0,   href: '/trips?filter=owned'  },
      { label: 'Joined',  value: userStats?.trips_joined ?? 0,  href: '/trips?filter=joined' },
      { label: 'Friends', value: userStats?.friends_count ?? 0, href: '/profile/friends'     },
    ].map(s => (
      <a href={s.href} class="stat-item flex-1 text-center px-2 flex flex-col items-center group/s">
        <dt class="stat-label">{s.label}</dt>
        <dd class="stat-num group-hover/s:text-blue-600">{s.value}</dd>
      </a>
    ))}
    <!-- Project 82 bucket stat -->
    <a href="/profile/bucket-list" class="stat-item flex-1 text-center px-2 flex flex-col items-center group/s">
      <dt class="stat-label">Bucket</dt>
      <dd class="text-xl font-bold text-gray-900 mt-0.5 leading-none transition-colors group-hover/s:text-blue-600">
        {bucketCount}<span class="text-sm font-semibold text-gray-400">/82</span>
      </dd>
      <span class="inline-flex items-center mt-1.5 text-[9px] font-bold text-orange-500 bg-orange-50 border border-orange-200 px-1.5 py-0.5 rounded-full tracking-wide">
        Project 82
      </span>
    </a>
  </dl>
</div>

<style>
  .brand-gradient      { background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%); }
  .profile-header-card { animation: fadeUp 0.35s ease both; }
  .ring-progress       { transition: stroke-dashoffset 0.9s cubic-bezier(0.4, 0, 0.2, 1); }
  .stat-item  { cursor: pointer; text-decoration: none; }
  .stat-label { font-size: 10px; font-weight: 700; color: #9CA3AF; text-transform: uppercase; letter-spacing: 0.08em; }
  .stat-num   { font-size: 24px; font-weight: 800; color: #111827; margin-top: 2px; transition: color 0.15s; display: block; }
  @keyframes fadeUp { from { opacity:0; transform:translateY(12px); } to { opacity:1; transform:translateY(0); } }
  @media (prefers-reduced-motion: reduce) {
    .profile-header-card { animation: none; }
    .ring-progress       { transition: none; }
  }
</style>

<script>
  document.getElementById('shareProfileBtn')?.addEventListener('click', async () => {
    try {
      if (navigator.share) {
        await navigator.share({ title: 'My Tara G! Profile', url: window.location.href });
      } else {
        await navigator.clipboard.writeText(window.location.href);
        document.dispatchEvent(new CustomEvent('profile:toast', { detail: 'âœ… Profile link copied!' }));
      }
    } catch {}
  });
</script>