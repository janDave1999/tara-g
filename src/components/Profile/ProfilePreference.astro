---
// components/Profile/ProfilePreferences.astro

interface Props {
  budget:        string | null;
  pace:          string | null;
  languages:     string[] | null;
  accommodation: string[] | null;
  travelStyle:   string[] | null;
}

const { budget, pace, languages, accommodation, travelStyle } = Astro.props;

const rows = [
  {
    label: 'Budget',
    value: budget,
    iconClass: 'bg-orange-50 text-orange-500',
    iconPath: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    label: 'Pace',
    value: pace,
    iconClass: 'bg-blue-50 text-blue-600',
    iconPath: 'M13 10V3L4 14h7v7l9-11h-7z',
  },
  {
    label: 'Languages',
    value: languages?.join(', ') ?? null,
    iconClass: 'bg-blue-50 text-blue-600',
    iconPath: 'M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129',
  },
  {
    label: 'Accommodation',
    value: accommodation?.join(', ') ?? null,
    iconClass: 'bg-green-50 text-green-600',
    iconPath: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  },
] as const;
---

<div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
  <div class="flex items-center justify-between px-5 py-4 border-b border-gray-100">
    <h2 class="section-title">Preferences</h2>
    <a href="/onboarding/preferences" class="text-xs font-semibold text-blue-600 hover:text-blue-700 transition-colors">Edit</a>
  </div>

  <div class="divide-y divide-gray-100">
    {rows.map(row => (
      <div class="flex items-center gap-3 px-5 py-3.5 hover:bg-gray-50 transition-colors">
        <div class={`w-9 h-9 rounded-xl flex items-center justify-center shrink-0 ${row.iconClass}`}>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d={row.iconPath}/>
          </svg>
        </div>
        <div class="min-w-0">
          <p class="text-[10px] font-bold text-gray-400 uppercase tracking-wide mb-0.5">{row.label}</p>
          {row.value
            ? <p class="text-sm font-semibold text-gray-900 truncate capitalize">{row.value}</p>
            : <p class="text-xs text-gray-400 italic">Not set</p>
          }
        </div>
      </div>
    ))}

    <!-- Travel Style (chip array) -->
    <div class="flex items-start gap-3 px-5 py-3.5 hover:bg-gray-50 transition-colors">
      <div class="w-9 h-9 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center shrink-0">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 3l14 9-14 9V3z"/>
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <p class="text-[10px] font-bold text-gray-400 uppercase tracking-wide mb-1.5">Travel Style</p>
        {travelStyle && travelStyle.length > 0 ? (
          <div class="flex flex-wrap gap-1">
            {travelStyle.map(s => (
              <span class="text-xs font-semibold px-2 py-0.5 rounded-full bg-blue-50 text-blue-700 border border-blue-200 capitalize">{s}</span>
            ))}
          </div>
        ) : (
          <p class="text-xs text-gray-400 italic">Not set</p>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .section-title { font-size: 10px; font-weight: 700; color: #9CA3AF; text-transform: uppercase; letter-spacing: 0.1em; }
</style>