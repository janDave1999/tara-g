---
import { PUBLIC_R2_URL } from 'astro:env/client';
interface Props {
  trip: any;
}

const { trip } = Astro.props;

const formatDate = (date: string | null) => {
  if (!date) return 'TBD';
  return new Date(date).toLocaleDateString('en-US', { 
    month: 'short', 
    day: 'numeric', 
    year: 'numeric' 
  });
};
---

<a 
  href={`/trips/${trip.trip_id}`}
  class="group block rounded-xl overflow-hidden border-2 border-dashed border-blue-200 hover:border-blue-400 hover:shadow-lg transition-all duration-200 bg-gradient-to-br from-blue-50 to-white"
>
  <!-- Cover Image -->
  <div class="relative h-48 bg-gradient-to-br from-blue-100 via-indigo-100 to-purple-100 overflow-hidden">
    {trip.cover_image ? (
      <img 
        src={PUBLIC_R2_URL +trip.cover_image} 
        alt={trip.title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    ) : (
      <div class="flex items-center justify-center h-full">
        <svg class="w-16 h-16 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    )}
    
    <!-- Match Score Badge -->
    <div class="absolute top-3 right-3">
      <div class="flex items-center gap-1 px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-yellow-400 to-orange-400 text-white shadow-md">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        {trip.match_score}% Match
      </div>
    </div>

    <!-- Suggested Label -->
    <div class="absolute top-3 left-3">
      <span class="px-3 py-1 rounded-full text-xs font-semibold bg-white/90 text-blue-700 backdrop-blur-sm">
        Suggested for you
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-5 space-y-3">
    <!-- Title and Region -->
    <div>
      <h3 class="font-bold text-lg text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-1">
        {trip.title}
      </h3>
      {trip.region && (
        <p class="text-sm text-gray-500 flex items-center gap-1 mt-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {trip.region}
        </p>
      )}
    </div>

    <!-- Description -->
    {trip.description && (
      <p class="text-sm text-gray-600 line-clamp-2">
        {trip.description}
      </p>
    )}

    <!-- Tags -->
    {trip.tags && trip.tags.length > 0 && (
      <div class="flex flex-wrap gap-1.5">
        {trip.tags.slice(0, 3).map((tag: string) => (
          <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-md text-xs font-medium">
            {tag}
          </span>
        ))}
        {trip.tags.length > 3 && (
          <span class="px-2 py-1 bg-blue-100 text-blue-600 rounded-md text-xs">
            +{trip.tags.length - 3}
          </span>
        )}
      </div>
    )}

    <!-- Dates -->
    <div class="flex items-center gap-2 text-sm text-gray-600">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <span>{formatDate(trip.start_date)} - {formatDate(trip.end_date)}</span>
    </div>

    <!-- Footer Info -->
    <div class="pt-3 border-t border-blue-100 flex items-center justify-between">
      <div class="flex items-center gap-2">
        {PUBLIC_R2_URL + trip.owner_avatar ? (
          <img src={trip.owner_avatar} alt={trip.owner_name} class="w-6 h-6 rounded-full ring-2 ring-blue-200" />
        ) : (
          <div class="w-6 h-6 rounded-full bg-blue-200"></div>
        )}
        <span class="text-sm text-gray-600 font-medium">{trip.owner_name}</span>
      </div>
      
      <button 
        class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white text-xs font-semibold rounded-md transition-colors"
        onclick="event.preventDefault(); event.stopPropagation(); alert('Join trip functionality');"
      >
        Join Trip
      </button>
    </div>
  </div>
</a>