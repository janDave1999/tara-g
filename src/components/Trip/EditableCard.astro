---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  editType: string;
  icon: any;
  label: string;
  isEditable: boolean;
  colorScheme: 'green' | 'emerald' | 'teal' | 'lime' | 'amber';
}

const { editType, icon: Icon, label, isEditable, colorScheme, class: className, ...rest } = Astro.props;

const colorClasses = {
  green: {
    bg: 'from-green-50',
    border: 'border-green-200',
    icon: 'from-green-500 to-green-600',
    shadow: 'shadow-green-500/30',
    edit: 'text-green-600'
  },
  emerald: {
    bg: 'from-emerald-50',
    border: 'border-emerald-200',
    icon: 'from-emerald-500 to-emerald-600',
    shadow: 'shadow-emerald-500/30',
    edit: 'text-emerald-600'
  },
  teal: {
    bg: 'from-teal-50',
    border: 'border-teal-200',
    icon: 'from-teal-500 to-teal-600',
    shadow: 'shadow-teal-500/30',
    edit: 'text-teal-600'
  },
  lime: {
    bg: 'from-lime-50',
    border: 'border-lime-200',
    icon: 'from-lime-500 to-lime-600',
    shadow: 'shadow-lime-500/30',
    edit: 'text-lime-600'
  },
  amber: {
    bg: 'from-amber-50',
    border: 'border-amber-200',
    icon: 'from-amber-500 to-amber-600',
    shadow: 'shadow-amber-500/30',
    edit: 'text-amber-600'
  }
};

const colors = colorClasses[colorScheme];
---

<div 
  class={`flex items-start gap-4 p-4 rounded-xl bg-gradient-to-br ${colors.bg} to-transparent border border-transparent transition-all ${isEditable ? `cursor-pointer hover:shadow-lg hover:border-${colors.border} hover:-translate-y-1 group` : 'hover:shadow-md'} ${className}`}
  data-edit={editType}
  data-editable={isEditable}
  {...rest}
>
  <div class={`flex-shrink-0 p-3 bg-gradient-to-br ${colors.icon} rounded-xl shadow-lg ${colors.shadow}`}>
    <Icon class="w-5 h-5 text-white" />
  </div>
  <div class="flex-1">
    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">{label}</p>
    <slot />
  </div>
  {isEditable && (
    <div class="opacity-0 group-hover:opacity-100 transition-opacity">
      <svg class={`w-4 h-4 ${colors.edit}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    </div>
  )}
</div>
