---
// src/components/MemberTable.astro
interface Member {
  role: string;
  user_id: string;
  joined_at: string;
  member_status: 'pending' | 'joined' | 'invited' | 'left';
}

interface Props {
  members: Member[];
}

const { members } = Astro.props;

const statusStyles = {
  pending: 'bg-amber-50 text-amber-700 border-amber-200',
  joined: 'bg-emerald-50 text-emerald-700 border-emerald-200',
  invited: 'bg-blue-50 text-blue-700 border-blue-200',
  left: 'bg-slate-50 text-slate-700 border-slate-200',
};

// Helper to format date
const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
};
---

<div class="overflow-x-auto rounded-lg border border-slate-200 shadow-sm">
  <table class="w-full text-left text-sm border-collapse bg-white">
    <thead class="bg-slate-50 border-b border-slate-200">
      <tr>
        <th class="px-6 py-4 font-semibold text-slate-900">User ID</th>
        <th class="px-6 py-4 font-semibold text-slate-900">Role</th>
        <th class="px-6 py-4 font-semibold text-slate-900">Status</th>
        <th class="px-6 py-4 font-semibold text-slate-900">Joined Date</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-100">
      {members?.map((member) => (
        <tr class="hover:bg-slate-50 transition-colors">
          <td class="px-6 py-4 font-mono text-xs text-slate-600">
            {member.user_id}
          </td>
          <td class="px-6 py-4 text-slate-700 capitalize">
            {member.role}
          </td>
          <td class="px-6 py-4">
            <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border ${statusStyles[member.member_status]}`}>
              {member.member_status}
            </span>
          </td>
          <td class="px-6 py-4 text-slate-500">
            {formatDate(member.joined_at)}
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>