  archived: 'ğŸ“¦',
  cancelled: 'âŒ',
};

const colorClass = (statusColors as any)[status] || statusColors.draft;
const icon = icons[status] ?? '';
---

<button
  type="button"
  class={`inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-semibold ring-1 ring-inset cursor-pointer hover:opacity-80 transition-opacity ${colorClass}`}
  data-status={status}
  title="Click to change status"
  onclick="document.getElementById('edit-status-modal').showModal()"
>
  {icon} {status.toUpperCase()}
</button>
