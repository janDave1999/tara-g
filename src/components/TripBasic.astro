---
import DateRangePicker from "@/components/DatePicker.astro";
import CostSharing from "@/components/CostSharing.astro";
---

<div class="bg-white p-6 sm:p-8 grid grid-cols-1 sm:grid-cols-[auto,1fr] gap-6 items-start mb-4">
  <div class="sm:text-right sm:w-40">
    <h2 class="text-2xl font-semibold mb-2">Trip Basics</h2>
    <p class="text-gray-600 text-sm sm:text-base">Describe your trip in a few sentences. This helps people find and join your trip.</p>
  </div>
  <div class="space-y-4">

    <div>
      <label for="title" class="block font-medium mb-1 text-base">Trip Title</label>
      <input type="text" id="title" name="title" placeholder="Beach Adventure"
        class="form-input" required />
    </div>

    <div>
      <label for="description" class="block font-medium mb-1 text-base">Trip Description</label>
      <textarea id="description" name="description" rows="4" placeholder="Describe your trip..."
        class="form-input" required></textarea>
    </div>

    <div>
      <label for="trip-dates" class="block font-medium mb-1 text-base">Trip Dates</label>
      <DateRangePicker id="trip-dates" nameStart="start_date" nameEnd="end_date" required />
    </div>

    <div>
      <label for="max_pax" class="block font-medium mb-1 text-base">Number of Pax</label>
      <input type="number" id="max_pax" name="max_pax" min="0" placeholder="Enter maximum number of pax"
        class="form-input" required />
    </div>

    <CostSharing />

  </div>
</div>
