---
// Header.astro
interface Props {
  avatarUrl?: string;
  userId?: string;
  username?: string;
  fullName?: string;
}

const { 
  avatarUrl = "", 
  userId = "", 
  username = "",
  fullName = "" 
} = Astro.props;
// Use defaults if empty
const displayUsername = username || "user";
const displayFullName = fullName || "User";
---

<!-- Overlay for mobile menu -->
<div id="overlay" class="fixed inset-0 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300 z-[55] md:hidden"></div>

<!-- Fixed Header Navigation -->
<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl bg-white/90 shadow-sm border-b border-gray-200/50">
  <nav class="px-3 sm:px-6">
    <div class="flex justify-between items-center h-14 sm:h-16">
      
      <!-- Left: Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-9 h-9 sm:w-10 sm:h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-md group-hover:shadow-lg transition-shadow">
          <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <span class="text-xl sm:text-2xl font-bold bg-gradient-to-r from-gray-800 to-blue-600 bg-clip-text text-transparent">Tara G!</span>
      </a>

      <!-- Center: Desktop Navigation Links -->
      <ul class="hidden md:flex items-center gap-6 lg:gap-8">
        <li>
          <a href="/about" class="nav-link text-gray-700 font-medium hover:text-blue-600 transition-colors relative">
            About
          </a>
        </li>
        <li>
          <a href="/blogs" class="nav-link text-gray-700 font-medium hover:text-blue-600 transition-colors relative">
            Blogs
          </a>
        </li>
      </ul>

      <!-- Right: Actions -->
      <div class="flex items-center gap-2 sm:gap-3">
        
        {userId ? (
          <>
            <!-- Notifications (Desktop & Mobile) -->
            <button class="relative p-2 rounded-lg hover:bg-gray-100 transition-colors">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
            </button>

            <!-- Desktop Profile Dropdown -->
            <div class="hidden md:block relative">
              <button id="profile-btn-desktop" class="p-1 rounded-lg hover:bg-gray-100 transition-colors">
                {avatarUrl ? (
                  <img src={avatarUrl} alt="Profile" class="w-9 h-9 rounded-full border-2 border-white shadow-sm" />
                ) : (
                  <div class="w-9 h-9 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-semibold">
                    {fullName ? fullName.charAt(0).toUpperCase() : 'U'}
                  </div>
                )}
              </button>

              <!-- Desktop Dropdown Menu -->
              <div id="profile-menu-desktop" class="absolute right-0 mt-2 w-64 bg-white rounded-xl shadow-2xl border border-gray-200 overflow-hidden opacity-0 translate-y-[-10px] pointer-events-none transition-all duration-300">
                <!-- Profile Header -->
                <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-4 text-white">
                  <div class="flex items-center gap-3">
                {avatarUrl ? (
                  <img src={avatarUrl} alt="Profile" class="w-12 h-12 rounded-full border-2 border-white" />
                ) : (
                  <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center text-white font-bold text-xl">
                    {displayFullName ? displayFullName.charAt(0).toUpperCase() : 'U'}
                  </div>
                )}
                <div>
                  <p class="font-semibold">{displayFullName}</p>
                  <p class="text-sm opacity-90">@{displayUsername}</p>
                </div>
                  </div>
                </div>

                <!-- Menu Items -->
                <div class="py-2">
                  <a href="/profile" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-50 transition-colors">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    <span class="text-gray-700">My Profile</span>
                  </a>
                  <a href="/trips" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-50 transition-colors">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-gray-700">My Trips</span>
                  </a>
                  <a href="/settings" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-50 transition-colors">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span class="text-gray-700">Settings</span>
                  </a>
                </div>

                <!-- Logout -->
                <div class="border-t border-gray-200 py-2">
                  <button class="logout-btn flex items-center gap-3 px-4 py-3 w-full hover:bg-red-50 transition-colors text-red-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                    </svg>
                    <span class="font-medium">Logout</span>
                  </button>
                </div>
              </div>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-toggle" class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors">
              <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
          </>
        ) : (
          <a href="/signin" class="font-medium text-gray-700 hover:text-blue-600 transition-colors px-4 py-2">
            Sign in
          </a>
        )}
      </div>
    </div>
  </nav>
</header>

<!-- Mobile Slide-out Menu -->
{userId && (
  <div id="mobile-menu" class="fixed top-0 right-[-100%] w-[80%] max-w-[320px] h-screen bg-white z-[60] shadow-2xl transition-all duration-300 md:hidden flex flex-col">
    <!-- Menu Header -->
    <div class="flex items-center justify-between p-4 border-b border-gray-200">
      <div class="flex items-center gap-3">
        {avatarUrl ? (
          <img src={avatarUrl} alt="Profile" class="w-12 h-12 rounded-full border-2 border-blue-500" />
        ) : (
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-xl">
            {displayFullName ? displayFullName.charAt(0).toUpperCase() : 'U'}
          </div>
        )}
        <div>
          <p class="font-semibold text-gray-900">{displayFullName}</p>
          <p class="text-sm text-gray-600">@{displayUsername}</p>
        </div>
      </div>
      <button id="close-menu" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Menu Content -->
    <div class="flex-1 overflow-y-auto p-4">
      <div class="space-y-2">
        <!-- Menu Links -->
        <a href="/about" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-gray-700 font-medium">About</span>
        </a>

        <a href="/blogs" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <span class="text-gray-700 font-medium">Blogs</span>
        </a>

        <div class="border-t border-gray-200 my-3"></div>

        <a href="/profile" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="text-gray-700 font-medium">My Profile</span>
        </a>

        <a href="/trips" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-gray-700 font-medium">My Trips</span>
        </a>

        <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span class="text-gray-700 font-medium">Settings</span>
        </a>
      </div>
    </div>

    <!-- Menu Footer -->
    <div class="p-4 border-t border-gray-200">
      <button class="logout-btn flex items-center justify-center gap-3 w-full px-4 py-3 rounded-lg hover:bg-red-50 transition-colors text-red-600 font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        Logout
      </button>
    </div>
  </div>
)}

<!-- Note: Bottom navigation is handled separately via BottomNav.astro component in PagePlate -->

<style>
  /* Nav link hover effect */
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Prevent body scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
  }
</style>

<script>
  // Type definitions
  interface HTMLElementWithClassList extends HTMLElement {
    classList: DOMTokenList;
  }

  // Mobile menu functionality
  const mobileToggle = document.getElementById('mobile-toggle') as HTMLButtonElement | null;
  const mobileMenu = document.getElementById('mobile-menu') as HTMLElementWithClassList | null;
  const closeMenu = document.getElementById('close-menu') as HTMLButtonElement | null;
  const overlay = document.getElementById('overlay') as HTMLElementWithClassList | null;

  function openMobileMenu(): void {
    if (mobileMenu && overlay) {
      mobileMenu.style.right = '0';
      overlay.classList.remove('opacity-0', 'pointer-events-none');
      overlay.classList.add('opacity-100');
      document.body.classList.add('menu-open');
    }
  }

  function closeMobileMenu(): void {
    if (mobileMenu && overlay) {
      mobileMenu.style.right = '-100%';
      overlay.classList.add('opacity-0', 'pointer-events-none');
      overlay.classList.remove('opacity-100');
      document.body.classList.remove('menu-open');
    }
  }

  if (mobileToggle) {
    mobileToggle.addEventListener('click', openMobileMenu);
  }

  if (closeMenu) {
    closeMenu.addEventListener('click', closeMobileMenu);
  }

  if (overlay) {
    overlay.addEventListener('click', closeMobileMenu);
  }

  // Close mobile menu when clicking a link
  if (mobileMenu) {
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach((link) => {
      link.addEventListener('click', closeMobileMenu);
    });
  }

  // Desktop profile dropdown
  const profileBtnDesktop = document.getElementById('profile-btn-desktop') as HTMLButtonElement | null;
  const profileMenuDesktop = document.getElementById('profile-menu-desktop') as HTMLElementWithClassList | null;

  if (profileBtnDesktop && profileMenuDesktop) {
    profileBtnDesktop.addEventListener('click', (e: Event) => {
      e.stopPropagation();
      const isActive = profileMenuDesktop.classList.contains('opacity-100');
      
      if (isActive) {
        profileMenuDesktop.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
        profileMenuDesktop.classList.add('opacity-0', 'translate-y-[-10px]', 'pointer-events-none');
      } else {
        profileMenuDesktop.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
        profileMenuDesktop.classList.remove('opacity-0', 'translate-y-[-10px]', 'pointer-events-none');
      }
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (e: Event) => {
      const target = e.target as Node;
      if (!profileMenuDesktop.contains(target) && target !== profileBtnDesktop) {
        profileMenuDesktop.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
        profileMenuDesktop.classList.add('opacity-0', 'translate-y-[-10px]', 'pointer-events-none');
      }
    });
  }

  // Logout functionality
  const logoutBtns = document.querySelectorAll('.logout-btn');
  
  logoutBtns.forEach((btn) => {
    btn.addEventListener('click', async () => {
      // Replace this with your actual logout logic
      // For example, if using Astro actions:
      // await actions.auth.signout();
      
      // For now, just redirect to signin
      window.location.href = '/signin';
    });
  });

  // Active link highlighting for bottom nav
  const currentPath = window.location.pathname;
  const bottomNavLinks = document.querySelectorAll('.fixed.bottom-0 a');
  
  bottomNavLinks.forEach((link) => {
    const href = link.getAttribute('href');
    if (href === currentPath || (currentPath === '/' && href === '/')) {
      link.classList.remove('text-gray-500');
      link.classList.add('text-blue-600');
    }
  });