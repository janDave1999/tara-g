  <div id="mobile-menu" class="fixed top-0 right-[-100%] w-[82%] max-w-[320px] h-screen bg-white z-[60] shadow-xl border-l border-gray-200 md:hidden flex flex-col transition-all duration-300 ease-in-out">
    
    <!-- Sidebar Header — brand gradient -->
    <div class="brand-gradient px-5 pt-5 pb-6 relative shrink-0">
