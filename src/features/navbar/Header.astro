<style>
  /* Brand colors: #3B82F6 → #2563EB per brand guide */
  .brand-gradient {
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  }

  .brand-gradient-text {
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Active nav state */
  .nav-link.active {
    color: #2563EB;
    background-color: #EFF6FF;
  }

  body.menu-open {
    overflow: hidden;
  }

  /* Staggered slide-in for sidebar links */
  #mobile-menu.open .sidebar-link {
    animation: slideInRight 0.22s ease forwards;
    opacity: 0;
    transform: translateX(10px);
  }
  #mobile-menu.open .sidebar-link:nth-child(1) { animation-delay: 0.04s; }
  #mobile-menu.open .sidebar-link:nth-child(2) { animation-delay: 0.08s; }
  #mobile-menu.open .sidebar-link:nth-child(3) { animation-delay: 0.13s; }
  #mobile-menu.open .sidebar-link:nth-child(4) { animation-delay: 0.17s; }
  #mobile-menu.open .sidebar-link:nth-child(5) { animation-delay: 0.21s; }

  @keyframes slideInRight {
    to { opacity: 1; transform: translateX(0); }
  }

  /* Slim scrollbar */
  #mobile-menu ::-webkit-scrollbar { width: 3px; }
  #mobile-menu ::-webkit-scrollbar-track { background: transparent; }
  #mobile-menu ::-webkit-scrollbar-thumb { background: #E5E7EB; border-radius: 99px; }

  @media (prefers-reduced-motion: reduce) {
    #mobile-menu.open .sidebar-link {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

<script>
  // Mobile menu
  const mobileToggle = document.getElementById('mobile-toggle') as HTMLButtonElement | null;
  const mobileMenu = document.getElementById('mobile-menu') as HTMLElement | null;
  const closeMenuBtn = document.getElementById('close-menu') as HTMLButtonElement | null;
  const overlay = document.getElementById('overlay') as HTMLElement | null;

  function openMobileMenu(): void {
    if (!mobileMenu || !overlay) return;
    mobileMenu.style.right = '0';
    mobileMenu.classList.add('open');
    overlay.classList.remove('opacity-0', 'pointer-events-none');
    overlay.classList.add('opacity-100');
    document.body.classList.add('menu-open');
  }

  function closeMobileMenu(): void {
    if (!mobileMenu || !overlay) return;
    mobileMenu.style.right = '-100%';
    mobileMenu.classList.remove('open');
    overlay.classList.add('opacity-0', 'pointer-events-none');
    overlay.classList.remove('opacity-100');
    document.body.classList.remove('menu-open');
  }

  mobileToggle?.addEventListener('click', openMobileMenu);
  closeMenuBtn?.addEventListener('click', closeMobileMenu);
  overlay?.addEventListener('click', closeMobileMenu);
  mobileMenu?.querySelectorAll('a').forEach(link => link.addEventListener('click', closeMobileMenu));

  // Desktop dropdown
  const profileBtnDesktop = document.getElementById('profile-btn-desktop') as HTMLButtonElement | null;
  const profileMenuDesktop = document.getElementById('profile-menu-desktop') as HTMLElement | null;

  profileBtnDesktop?.addEventListener('click', (e: Event) => {
    e.stopPropagation();
    const isOpen = profileMenuDesktop?.classList.contains('opacity-100');
    if (isOpen) {
      profileMenuDesktop?.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
      profileMenuDesktop?.classList.add('opacity-0', 'translate-y-[-8px]', 'pointer-events-none');
    } else {
      profileMenuDesktop?.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
      profileMenuDesktop?.classList.remove('opacity-0', 'translate-y-[-8px]', 'pointer-events-none');
    }
  });

  document.addEventListener('click', (e: Event) => {
    const target = e.target as Node;
    if (profileMenuDesktop && !profileMenuDesktop.contains(target) && target !== profileBtnDesktop) {
      profileMenuDesktop.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
      profileMenuDesktop.classList.add('opacity-0', 'translate-y-[-8px]', 'pointer-events-none');
    }
  });

  // Active nav highlight
  const currentPath = window.location.pathname;
  document.querySelectorAll('.nav-link').forEach(link => {
    if (link.getAttribute('href') === currentPath) link.classList.add('active');
  });

  // Bottom nav highlight
  document.querySelectorAll('.fixed.bottom-0 a').forEach(link => {
    const href = link.getAttribute('href');
    if (href === currentPath || (currentPath === '/' && href === '/')) {
      link.classList.remove('text-gray-500');
      link.classList.add('text-blue-600');
    }
  });

  // Logout
  document.querySelectorAll('.logout-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const { actions } = await import("astro:actions");
      await actions.auth.signout();
      window.location.href = '/signin';
    });
  });
</script>