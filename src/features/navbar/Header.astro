---
import { PUBLIC_R2_URL } from 'astro:env/client';

interface Props {
  avatarUrl?: string;
  userId?: string;
  username?: string;
  fullName?: string;
}

const { 
  avatarUrl = "", 
  userId = "", 
  username = "",
  fullName = "" 
} = Astro.props;

const displayUsername = username || "user";
const displayFullName = fullName || "User";
const initials = displayFullName.charAt(0).toUpperCase();
---

<!-- Overlay -->
<div 
  id="overlay" 
  class="fixed inset-0 bg-gray-900/40 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 z-[55] md:hidden"
></div>

<!-- Header -->
<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-xl border-b border-gray-200/70 shadow-sm">
  <nav class="px-4 sm:px-6">
    <div class="flex justify-between items-center h-14 sm:h-16">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5 group">
        <div class="relative shrink-0">
          <picture>
            <source srcset=`${PUBLIC_R2_URL}logo-with-bg.jpg` media="(max-width: 768px)" />
            <img
              src=`${PUBLIC_R2_URL}logo-with-bg.jpg`
              class="w-8 h-8 sm:w-10 sm:h-10 object-cover rounded-lg shadow-sm border border-gray-100 group-hover:shadow-md transition-shadow duration-200"
              alt="Tara G! Logo"
            />
          </picture>
        </div>
        <span class="text-lg sm:text-xl font-bold text-gray-800 tracking-tight">
          Tara <span class="brand-gradient-text">G!</span>
        </span>
      </a>

      <!-- Desktop Nav -->
      <ul class="hidden md:flex items-center gap-1">
        <li>
          <a href="/about" class="nav-link text-sm font-medium text-gray-600 hover:text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-50 transition-all duration-150">
            About
          </a>
        </li>
        <li>
          <a href="/blogs" class="nav-link text-sm font-medium text-gray-600 hover:text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-50 transition-all duration-150">
            Blogs
          </a>
        </li>
      </ul>

      <!-- Right Actions -->
      <div class="flex items-center gap-1.5 sm:gap-2">

        {userId ? (
          <>
            <!-- Notifications -->
            <button class="relative p-2 rounded-lg text-gray-500 hover:text-blue-600 hover:bg-blue-50 transition-all duration-150">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-orange-500 rounded-full border-2 border-white"></span>
            </button>

            <!-- Desktop Profile Dropdown -->
            <div class="hidden md:block relative">
              <button id="profile-btn-desktop" class="flex items-center gap-2 pl-1 pr-3 py-1 rounded-full border border-gray-200 hover:border-blue-300 hover:bg-blue-50/50 transition-all duration-150 group">
                {avatarUrl ? (
                  <img src={avatarUrl} alt="Profile" class="w-7 h-7 rounded-full border border-gray-200" />
                ) : (
                  <div class="w-7 h-7 rounded-full brand-gradient flex items-center justify-center text-white text-xs font-bold">
                    {initials}
                  </div>
                )}
                <span class="text-sm font-medium text-gray-700 group-hover:text-blue-600 transition-colors">{displayUsername}</span>
                <svg class="w-3.5 h-3.5 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>

              <!-- Desktop Dropdown -->
              <div id="profile-menu-desktop" class="absolute right-0 mt-2 w-72 bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden opacity-0 translate-y-[-8px] pointer-events-none transition-all duration-250">
                
                <!-- Profile Header -->
                <div class="brand-gradient p-5">
                  <div class="flex items-center gap-3">
                    {avatarUrl ? (
                      <img src={avatarUrl} alt="Profile" class="w-12 h-12 rounded-xl border-2 border-white/40 shadow-md" />
                    ) : (
                      <div class="w-12 h-12 rounded-xl bg-white/20 border border-white/30 flex items-center justify-center text-white font-bold text-xl shadow-md">
                        {initials}
                      </div>
                    )}
                    <div>
                      <p class="font-semibold text-white text-sm leading-snug">{displayFullName}</p>
                      <p class="text-xs text-blue-100 mt-0.5">@{displayUsername}</p>
                      <div class="flex items-center gap-1 mt-1.5">
                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-300 animate-pulse"></span>
                        <span class="text-xs text-blue-100">Active</span>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Menu Items -->
                <div class="p-2">
                  <a href="/profile" class="flex items-center gap-3 px-3 py-2.5 rounded-xl hover:bg-blue-50 transition-colors duration-150 group">
                    <div class="w-9 h-9 rounded-xl bg-blue-50 group-hover:bg-blue-100 flex items-center justify-center transition-colors shrink-0">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-800 group-hover:text-blue-700">My Profile</p>
                      <p class="text-xs text-gray-400 mt-0.5">View & edit your info</p>
                    </div>
                  </a>
                  <a href="/trips" class="flex items-center gap-3 px-3 py-2.5 rounded-xl hover:bg-blue-50 transition-colors duration-150 group">
                    <div class="w-9 h-9 rounded-xl bg-blue-50 group-hover:bg-blue-100 flex items-center justify-center transition-colors shrink-0">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-800 group-hover:text-blue-700">My Trips</p>
                      <p class="text-xs text-gray-400 mt-0.5">Explore your journeys</p>
                    </div>
                  </a>
                  <a href="/settings" class="flex items-center gap-3 px-3 py-2.5 rounded-xl hover:bg-gray-50 transition-colors duration-150 group">
                    <div class="w-9 h-9 rounded-xl bg-gray-100 group-hover:bg-gray-200 flex items-center justify-center transition-colors shrink-0">
                      <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-800 group-hover:text-gray-900">Settings</p>
                      <p class="text-xs text-gray-400 mt-0.5">Preferences & privacy</p>
                    </div>
                  </a>
                </div>

                <!-- Logout -->
                <div class="px-2 pb-2">
                  <button class="logout-btn w-full flex items-center gap-3 px-3 py-2.5 rounded-xl hover:bg-red-50 border border-transparent hover:border-red-100 transition-all duration-150 group">
                    <div class="w-9 h-9 rounded-xl bg-red-50 group-hover:bg-red-100 flex items-center justify-center transition-colors shrink-0">
                      <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                      </svg>
                    </div>
                    <span class="text-sm font-semibold text-red-500 group-hover:text-red-600">Sign out</span>
                  </button>
                </div>
              </div>
            </div>

            <!-- Mobile Hamburger -->
            <button id="mobile-toggle" class="md:hidden p-2 rounded-lg text-gray-600 hover:text-blue-600 hover:bg-blue-50 transition-all duration-150">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
          </>
        ) : (
          <a href="/signin" class="text-sm font-semibold text-blue-600 hover:text-blue-700 px-4 py-2 rounded-lg border border-blue-200 hover:border-blue-300 hover:bg-blue-50 transition-all duration-150">
            Sign in
          </a>
        )}
      </div>
    </div>
  </nav>
</header>

