---
import Layout from "./Layout.astro"
import SeoHead from "@/seo/component/SeoHead.astro"

interface Props {
  title: string
  description?: string
  noIndex?: boolean
}

const { title, description, noIndex = false } = Astro.props;

// Default SEO description for auth pages
const seoDescription: any = description || {
  title,
  type: "WebPage",
  description: "Sign in to your Tara G! account",
  author: "Tara G!",
  authorIs: "Organization",
};
---

<Layout title={title} html={{}} >
  <Fragment slot={`head-last`}>
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    <SeoHead description={seoDescription} showAltLanguages={false} />
  </Fragment>
  
  <main class="
    min-h-screen 
    flex items-center justify-center 
    bg-gradient-to-br from-blue-50 to-indigo-100 
    px-4 sm:px-6 lg:px-8
    py-8 sm:py-12
  ">
    <div class="w-full max-w-md">
      <slot />
    </div>
  </main>
</Layout>