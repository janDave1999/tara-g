---
//TailwindCSS and other CSS
import "@/styles/globals.css";
//i18n
import { getLangFromUrl } from "@/i18/utils";
import type { HTMLAttributes } from "astro/types";
import { PUBLIC_R2_URL } from "astro:env/client";

interface Props {
	title: string,
	html: HTMLAttributes<'html'>
}
const {
	title,
	html
} = Astro.props;

const currentLang = getLangFromUrl(Astro.url);
const r2Origin = PUBLIC_R2_URL ? new URL(PUBLIC_R2_URL).origin : null;
---

<!doctype html>
<html lang={currentLang} {...html}>
	<head>
		<slot name="head-first" />

		<meta name="application-name" content="Tara G!" />
		<title>{title}</title>
		<meta content="text/html;charset=utf-8" http-equiv="Content-Type">
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">

		{r2Origin && <link rel="preconnect" href={r2Origin} />}
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#2563EB" />

		<slot name="head-last" />
	</head>

	<body>
		<slot />
		<script>
			// Import other scripts here
		</script>
	</body>
</html>
