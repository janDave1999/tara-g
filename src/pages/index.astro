---
import PagePlate from "../layouts/PagePlate.astro";
import Blog from "@/components/Blog/Blog.astro"
import Skeleton from "@/components/Skeleton.astro";
import { PUBLIC_R2_URL } from "astro:env/client";


const trips = [
  {
    title: "Beach Adventure",
    slug: "beach-adventure",
    img: `${PUBLIC_R2_URL}image_processing20181219-4-1w5b3n8.jpg`,
    price: 12500,
    organizer: "John Doe",
    date: "2023-07-15",
    likes: 98,
    comments: 12,
    reused: 8,
    description: "Sun, sand, and waves—your perfect getaway."
  },
  {
    title: "Mountain Trek",
    slug: "mountain-trek",
    img: `${PUBLIC_R2_URL}Mt-Mayon-750x469.webp`,
    price: 18300,
    organizer: "Jane Smith",
    date: "2023-08-22",
    likes: 200,
    comments: 36,
    reused: 25,
    description: "Challenge yourself and enjoy breathtaking views."
  },
  {
    title: "Road Trips",
    slug: "road-trips",
    img: `${PUBLIC_R2_URL}Philippines-Hertz-Patapat-ViaductR.jpg`,
    price: 9800,
    organizer: "Bob Johnson",
    date: "2023-09-15",
    likes: 98,
    comments: 12,
    reused: 8,
    description: "Hit the road and discover hidden gems along the way."
  },
];

---

<PagePlate title="Tara G! - Adventure Awaits" noContainer>
<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">Tara G! Adventure Starts Here</h1>
      <p class="py-6">
        Make your adventures unforgettable with Tara G! - Join or start your own adventure today!
      </p>
      <button class="btn btn-primary">Get Started</button>
    </div>
  </div>
</div>
<section class="py-24 px-8 text-center">
  <h2 class="text-4xl font-bold mb-12">Recent Trips</h2>
  <div class="grid md:grid-cols-3 gap-8">
  {trips.map(trip => (
    <div class="bg-white rounded-xl trip-card shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden flex flex-col" data-slug={trip.slug}>
      <div class="relative group overflow-hidden">
        <img src={trip.img} alt={trip.title} class="w-full h-56 object-cover transition-transform duration-300 group-hover:scale-105"/>
        <span class="absolute top-4 right-4 bg-blue-500 text-white text-sm font-semibold px-3 py-1 rounded-full shadow-md">
          ₱{trip.price.toLocaleString()}
        </span>
      </div>
      <div class="p-6 flex-1 flex flex-col justify-between">
        <div>
          <h3 class="text-2xl font-bold mb-2">{trip.title}</h3>
          <p class="text-gray-600 mb-4">{trip.description}</p>
        </div>
        <div class="flex justify-between items-center text-gray-500 text-sm font-medium mb-4">
          <p>Organizer: {trip.organizer}</p>
          <p>Date: {trip.date}</p>
        </div>
        <div class="flex justify-between items-center text-gray-500 text-sm">
          <div class="flex items-center gap-2 hover:text-red-600 transition-colors cursor-pointer">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 18l-6.828-6.828a4 4 0 010-5.656z"/></svg>
            <span>{trip.likes} Likes</span>
          </div>
          <div class="flex items-center gap-2 hover:text-blue-600 transition-colors cursor-pointer">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M18 10c0 3.866-3.582 7-8 7s-8-3.134-8-7 3.582-7 8-7 8 3.134 8 7zM7 9h6v2H7V9z"/></svg>
            <span>{trip.comments} Comments</span>
          </div>
          <div class="flex items-center gap-2 hover:text-green-600 transition-colors cursor-pointer">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M4 10a6 6 0 1112 0 6 6 0 01-12 0zm6-3a1 1 0 100 2 1 1 0 000-2zm0 4a1 1 0 00-.707.293l-1 1a1 1 0 101.414 1.414l.293-.293.293.293a1 1 0 001.414-1.414l-1-1A1 1 0 0010 11z"/></svg>
            <span>{trip.reused} Reused</span>
          </div>
        </div>
      </div>
    </div>
  ))}
</div>
</section>
  <Blog server:defer>
      <Skeleton slot="fallback" />
  </Blog>
</PagePlate>

<style>
  /* Simple fade-in animations */
  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeInDown { animation: fadeInDown 1s ease forwards; }
  .animate-fadeInUp { animation: fadeInUp 1s ease forwards; }
</style>

<script>
  const trips = document.querySelectorAll('.trip-card') as NodeListOf<HTMLElement>;

  trips.forEach(trip => {
    trip.addEventListener('click', () => {
      const slug = trip.dataset.slug;
      // Redirect to the trip page
      window.location.href = `/trips/${slug}`;
    });
  });
</script>