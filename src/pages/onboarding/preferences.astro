<script define:vars={{ isOnboardingComplete }}>
    import { actions } from 'astro:actions';

    const form = document.getElementById('preferencesForm') as HTMLFormElement;
    const errorDisplay = document.getElementById('errorDisplay') as HTMLElement;
    const successDisplay = document.getElementById('successDisplay') as HTMLElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

    // Form submission - uses RPC via action
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      submitBtn.disabled = true;
      submitBtn.textContent = 'Completing...';
      hideMessages();

      const formData = new FormData(form);

      // Helper to parse comma-separated strings to arrays
      const parseArray = (value: string | null) => {
        if (!value) return undefined;
        return value.split(',').map(s => s.trim()).filter(Boolean);
      };

      // Build preferences object for RPC call
      const preferences: any = {};

      // Budget range
      const budgetRange = formData.get('budget_range');
      if (budgetRange) preferences.budget_range = budgetRange;

      // Travel style (multiple checkboxes)
      const travelStyle = formData.getAll('travel_style');
      if (travelStyle.length > 0) preferences.travel_style = travelStyle;

      // Pace preference
      const pace = formData.get('pace_preference');
      if (pace) preferences.pace_preference = pace;

      // Accommodation types (multiple checkboxes)
      const accommodations = formData.getAll('accommodation_type');
      if (accommodations.length > 0) preferences.accommodation_type = accommodations;

      // Group sizes
      const preferredSize = formData.get('preferred_group_size');
      if (preferredSize) preferences.preferred_group_size = parseInt(preferredSize as string);
      
      const maxSize = formData.get('max_group_size');
      if (maxSize) preferences.max_group_size = parseInt(maxSize as string);

      // Cost splitting
      preferences.willing_to_split_costs = formData.get('willing_to_split_costs') === 'on';

      // Arrays from comma-separated strings
      const languages = parseArray(formData.get('languages_spoken') as string);
      if (languages) preferences.languages_spoken = languages;

      const dietary = parseArray(formData.get('dietary_restrictions') as string);
      if (dietary) preferences.dietary_restrictions = dietary;

      const accessibility = parseArray(formData.get('accessibility_needs') as string);
      if (accessibility) preferences.accessibility_needs = accessibility;

      try {
        // Save preferences using RPC
        const { data: prefsData, error: prefsError } = await actions.onboarding.setTravelPreferences(preferences);

        if (prefsError) {
          throw new Error(prefsError.message);
        }

        showSuccess(prefsData.message || 'Preferences saved!');

        // Complete onboarding using RPC (only if not already complete)
        if (!isOnboardingComplete) {
          const { data: completeData, error: completeError } = await actions.onboarding.completeOnboarding();

          if (completeError) {
            throw new Error(completeError.message);
          }

          showSuccess(completeData.message || 'Onboarding complete! ğŸ‰');
        }

        // Redirect based on onboarding status
        setTimeout(() => {
          window.location.href = isOnboardingComplete ? '/profile' : '/feeds';
        }, 1500);
      } catch (error: any) {
        showError(error.message || 'Failed to save preferences');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Complete Setup';
      }
    });

    document.getElementById('backBtn')?.addEventListener('click', () => {
      window.location.href = '/onboarding/interests';
    });

    document.getElementById('skipBtn')?.addEventListener('click', async () => {
      try {
        if (!isOnboardingComplete) {
          await actions.onboarding.skipOnboardingStep({ step: 'preferences' });
          await actions.onboarding.completeOnboarding();
        }
        window.location.href = isOnboardingComplete ? '/profile' : '/feeds';
      } catch (error) {
        console.error('Skip failed:', error);
      }
    });

    function showError(message: string) {
      errorDisplay.classList.remove('hidden');
      errorDisplay.querySelector('p')!.textContent = message;
      successDisplay.classList.add('hidden');
    }

    function showSuccess(message: string) {
      successDisplay.classList.remove('hidden');
      successDisplay.querySelector('p')!.textContent = message;
      errorDisplay.classList.add('hidden');
    }

    function hideMessages() {
      errorDisplay.classList.add('hidden');
      successDisplay.classList.add('hidden');
    }
  </script>
</PagePlate>