---
import Pageplate from "@/layouts/PagePlate.astro";
---

<Pageplate title="Register">
    <section class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md p-8">
            <h1 class="text-4xl font-bold">Register</h1>
            <p class="mt-4">
                Already have an account? <a href="/signin" class="text-blue-500 hover:underline">Sign in</a>
            </p>
            <form action="/api/auth/register" method="post" class="mt-8">
                <div class="mb-4">
                    <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                    <input type="email" name="email" id="email" class="shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <input type="password" name="password" id="password" class="shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Register</button>
            </form>
        </div>
    </section>
</Pageplate>