---
import Pageplate from "@/layouts/PagePlate.astro";
---

<Pageplate title="Register">
  <section class="flex justify-center items-center min-h-[80vh] bg-gray-50">
    <div class="bg-white rounded-2xl shadow-md p-8 w-full max-w-md">
      <h1 class="text-2xl font-semibold text-center mb-3">Create an Account</h1>
      <p class="text-gray-600 text-center mb-6">
        Already have an account?
        <a href="/signin" class="text-blue-600 hover:underline">Sign in</a>
      </p>

      <form id="registerForm" class="space-y-4" action="/api/auth/register" method="post">
        <div>
          <label for="email" class="block text-gray-700 mb-1">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 outline-none"
            required
          />
        </div>

        <div>
          <label for="password" class="block text-gray-700 mb-1">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 outline-none"
            required
          />
          <ul class="text-sm text-gray-500 mt-2 space-y-1" id="passwordHints">
            <li id="hint-length">• At least 8 characters</li>
            <li id="hint-upper">• One uppercase letter</li>
            <li id="hint-lower">• One lowercase letter</li>
            <li id="hint-num">• One number</li>
            <li id="hint-special">• One special character</li>
          </ul>
        </div>

        <div>
          <label for="confirm" class="block text-gray-700 mb-1">Confirm Password</label>
          <input
            type="password"
            id="confirm"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 outline-none"
            required
          />
          <p id="matchError" class="text-red-600 text-sm mt-1 hidden">Passwords do not match</p>
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white font-medium py-2 rounded-lg hover:bg-blue-700 transition"
        >
          Register
        </button>

        <div class="flex items-center justify-center my-4">
          <span class="w-1/5 border-b"></span>
          <span class="text-gray-500 mx-2 text-sm">or</span>
          <span class="w-1/5 border-b"></span>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <button type="button" class="flex items-center justify-center border border-gray-300 rounded-lg py-2 hover:bg-gray-50">
            <img src="/icons/google.svg" alt="Google" class="w-5 h-5 mr-2" /> Google
          </button>
          <button type="button" class="flex items-center justify-center border border-gray-300 rounded-lg py-2 hover:bg-gray-50">
            <img src="/icons/facebook.svg" alt="Facebook" class="w-5 h-5 mr-2" /> Facebook
          </button>
        </div>
      </form>
    </div>

    <!-- Confirmation Modal -->
    <div
      id="confirmationModal"
      class="hidden fixed inset-0 bg-black/50 flex justify-center items-center z-50"
    >
      <div class="bg-white rounded-xl shadow-xl p-8 w-80 text-center">
        <img src="/icons/email-confirm.png" alt="Email Sent" class="w-16 h-16 mx-auto mb-4" />
        <h2 class="text-xl font-semibold mb-2">Confirmation Sent!</h2>
        <p class="text-gray-600 mb-6 text-sm">
          We've sent a confirmation link to your email. Please verify to activate your account.
        </p>
        <button
          onclick="window.location.href='/signin'"
          class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition"
        >
          Go to Sign In
        </button>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById("registerForm") as HTMLFormElement;
    const password = document.getElementById("password") as HTMLInputElement;
    const confirm = document.getElementById("confirm") as HTMLInputElement;
    const matchError = document.getElementById("matchError") as HTMLParagraphElement;
    const modal = document.getElementById("confirmationModal") as HTMLDivElement;

    const hints = {
      length: document.getElementById("hint-length"),
      upper: document.getElementById("hint-upper"),
      lower: document.getElementById("hint-lower"),
      num: document.getElementById("hint-num"),
      special: document.getElementById("hint-special"),
    };

    function updateHints(value: string) {
        if (hints.length && hints.upper && hints.lower && hints.num && hints.special) {
            hints.length.classList.toggle("text-green-600", value.length >= 8);
            hints.upper.classList.toggle("text-green-600", /[A-Z]/.test(value));
            hints.lower.classList.toggle("text-green-600", /[a-z]/.test(value));
            hints.num.classList.toggle("text-green-600", /[0-9]/.test(value));
            hints.special.classList.toggle("text-green-600", /[^A-Za-z0-9]/.test(value));
        }
    }

    password.addEventListener("input", (e: InputEvent | Event) => {
        const target = e.target as HTMLInputElement;
        if (target) {
            updateHints(target.value);
        }
    });

    confirm.addEventListener("input", () => {
      matchError.classList.toggle("hidden", password.value === confirm.value);
    });

    form.addEventListener("submit", async e => {
      e.preventDefault();
      if (password.value !== confirm.value) {
        matchError.classList.remove("hidden");
        return;
      }

      const formData = new FormData(form);
      const response = await fetch(form.action, {
        method: "POST",
        body: formData,
      });

      if (response.ok) {
        modal.classList.remove("hidden");
      }
    });
  </script>
</Pageplate>
