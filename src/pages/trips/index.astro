---
import Pageplate from "@/layouts/PagePlate.astro";
import { supabase } from "@/lib/supabase";

let user_id = Astro.locals.user_id;
const { data: trips } = await supabase
  .from("trips")
  .select("trip_id, title, status, created_at")
  .eq("owner_id", user_id)
  .order("created_at", { ascending: false });
---

<Pageplate title="My Trips">

    <section class="px-6 py-10">
      <div class="max-w-5xl mx-auto text-center space-y-3">
        <h1 class="text-4xl font-extrabold">
          Welcome back, Explorer
        </h1>

        <p class="text-md text-gray-600">
          Your adventures begin here â€” past, present, and those waiting to happen.
        </p>

        <a
          href="/trips/create"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-blue-500 hover:bg-blue-600 text-white font-medium"
        >
          + Create New Trip
        </a>
      </div>
    </section>

  <section class="space-y-4">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold">My Trips</h1>
      <a href="/trips/create" class="btn btn-primary">+ New Trip</a>
    </div>

    <div class="grid md:grid-cols-3 gap-4">
      {trips?.map((trip) => (
        <a href={`/trips/${trip.trip_id}`} class="card p-4 border hover:shadow-md transition">
          <h2 class="font-semibold">{trip.title}</h2>
          <p class="text-sm text-gray-500">{trip.status}</p>
          <p class="text-xs text-gray-400">Created {new Date(trip.created_at).toLocaleDateString()}</p>
        </a>
      ))}
    </div>
  </section>
</Pageplate>