---
import { SEO } from "astro-seo";

interface Props {
  description?: {
    title? : string,
    author?: string|string[],
    previewImage?: string,
  },
}
const { description } = Astro.props as Props;
const desc = description || {};
const fallbackImage = `${Astro.url.origin}/images/shared link preview in viber.png`;
const imageUrl = desc.previewImage || fallbackImage;
---
<SEO
  twitter={{
    card: "summary_large_image",
    site: "@taragph",
    creator: desc.author ? (Array.isArray(desc.author) ? desc.author.join(", ") : desc.author) : undefined,
    title: desc.title || "Tara G - Philippine Travel Community",
    image: imageUrl,
    imageAlt: desc.title || "Tara G - Plan your Philippine adventure",
  }}
/>