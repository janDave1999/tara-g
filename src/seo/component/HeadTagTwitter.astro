---
import { SEO } from "astro-seo";

interface Props {
  description?: {
    title? : string,
    author?: string|string[],
    previewImage?: string,
  },
}
const { description } = Astro.props as Props;
const desc = description || {};
---
<SEO
  twitter={{
    card: "summary_large_image",
    site: Astro.url.hostname,
    creator: desc.author ? (Array.isArray(desc.author) ? desc.author.join(", ") : desc.author) : undefined,
    title: desc.title,
    image: desc.previewImage || `${Astro.url.origin}/images/generic-preview-page.png`,
    imageAlt: desc.title,
  }}
/>